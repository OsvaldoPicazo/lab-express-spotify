<h2>Tracks for: {{album.body.name}}</h2>
<section id="tracks">
    {{#each data.body.items}}
        <span class="artist">
            <figure>
                <figcaption>{{this.name}}</figcaption>
                <audio
                    controls
                    src="{{this.preview_url}}">
                        Your browser does not support the
                        <code>audio</code> element.
                </audio>
            </figure>
            <br>
            <br>
        </span>
    {{/each}}
</section>
