<h2>Albums for: {{artist.body.name}}</h2>
<section id="albums">
    {{#each data.body.items}}
        <span class="artist">
            <img src="{{this.images.1.url}}" alt="{{this.name}}">
            <p>{{this.name}}</p>
            <a href="/tracks/{{this.id}}"> <button>View tracks</button></a>
            <br>
            <br>
        </span>
    {{/each}}
</section>
